<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stoko"
        xmlns:RuntimeBinder="clr-namespace:Microsoft.CSharp.RuntimeBinder;assembly=Microsoft.CSharp" x:Class="stoko.MainWindow"
        mc:Ignorable="d"
        Title="Stoko" Height="450" Width="800" FontFamily="/stoko;component/Resources/#Roboto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Height="15" VerticalAlignment="Top" Margin="0,0,-0.4,0" RenderTransformOrigin="0.5,0.5" FontFamily="/stoko;component/Resources/#Roboto">
            <Menu.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Menu.RenderTransform>
            <MenuItem Header="Files">
                <ComboBoxItem Content="{DynamicResource close}"/>
            </MenuItem>
        </Menu>
        <StatusBar Height="20" Margin="0,0,-0.4,0" VerticalAlignment="Bottom" Background="#FFF0F0F0">
            <ListBoxItem x:Name="msgStatut" Content="Status: Ok" Width="auto" Padding="0,0,0,0" FontSize="10"/>
        </StatusBar>
    </Grid>
</Window>
