<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:stoko"
        xmlns:RuntimeBinder="clr-namespace:Microsoft.CSharp.RuntimeBinder;assembly=Microsoft.CSharp" x:Class="stoko.MainWindow"
        mc:Ignorable="d"
        Loaded="MainWindow_Loaded"
        Closing="Window_Closing"
        Title="Stoko" Height="550" Width="800" FontFamily="/stoko;component/Resources/#Roboto" MinWidth="800" MinHeight="550" Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="MainMenu" Height="20" VerticalAlignment="Top" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5" FontFamily="/stoko;component/Resources/#Roboto" Background="{DynamicResource MaterialDesignBackground}" Visibility="Hidden">
            <Menu.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Menu.RenderTransform>
            <MenuItem Header="{DynamicResource mHome}" Height="18">
                <MenuItem Header="{DynamicResource setting}" Click="Button_Settings_Click"/>
                <Separator Style="{DynamicResource MaterialDesignSeparator}"/>
                <MenuItem Header="{DynamicResource close}" Click="Close_Click"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource mHelp}" Height="20">
                <MenuItem Header="{DynamicResource about}"/>
            </MenuItem>
        </Menu>
        <Grid x:Name="MainGrid" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Style="{DynamicResource MaterialDesignFlatToggleButton}" Content="" HorizontalAlignment="Right" VerticalAlignment="Top" Width="18" Height="18" Margin="0,4,3.6,0" Panel.ZIndex="1" Padding="1" BorderBrush="{x:Null}" Foreground="{DynamicResource MaterialDesignBody}" ToolTip="{DynamicResource setting}" Cursor="Hand" Focusable="True" GotFocus="Button_GotFocus" LostFocus="Button_LostFocus">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/icons/baseline_more_vert_black_18dp.png"/>
                </Button.Background>
            </Button>
            <TabControl x:Name="mainTC" Margin="0,0,0,0" MinWidth="722" MinHeight="320" Background="{DynamicResource MaterialDesignBackground}" BorderBrush="{DynamicResource MaterialDesignPaper}" SelectionChanged="MainTC_SelectionChanged">
                <TabItem x:Name="tiProduct" Header="{DynamicResource tProduct}" Background="{DynamicResource MaterialDesignBackground}" BorderBrush="{x:Null}" Style="{DynamicResource TabItemStyle}">
                    <Grid Background="{DynamicResource MaterialDesignCardBackground}">
                        <GroupBox Header="{DynamicResource cProductInfos}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="275" Padding="8, 2, 8, 2" Margin="10,10,0,0" Height="311">
                            <Grid Margin="0,0,0,0" x:Name="ProductForm" Visibility="Collapsed">
                                <TextBox x:Name="PFTitle" materialDesign:HintAssist.Hint="{DynamicResource cProductTitle}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="0,4,0,0" Height="70" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
                                <TextBox x:Name="PFPriceHT" materialDesign:HintAssist.Hint="{DynamicResource cPriceHT}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="155,4,0,0" Height="70" TextWrapping="Wrap" VerticalAlignment="Top" Width="50"/>
                                <TextBox x:Name="PFQentity" materialDesign:HintAssist.Hint="{DynamicResource cQuantityNotOrdered}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="209,4,0,0" Height="70" TextWrapping="Wrap" VerticalAlignment="Top" Width="50"/>
                                <TextBox x:Name="PFRef" materialDesign:HintAssist.Hint="{DynamicResource cProductReference}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="0,79,0,0" Height="70" TextWrapping="Wrap" VerticalAlignment="Top" Width="105"/>
                                <TextBox x:Name="PFDes" materialDesign:HintAssist.Hint="{DynamicResource cDescription}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="0,154,0,0" Height="88" TextWrapping="Wrap" VerticalAlignment="Top" Width="259"/>
                                <ComboBox x:Name="PFCat" materialDesign:HintAssist.Hint="{DynamicResource cCategory}" Style="{StaticResource MaterialDesignComboBox}" HorizontalAlignment="Left" Margin="110,79,-0.8,0" Height="70" VerticalAlignment="Top" Width="150" FontSize="16" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="12,0"/>
                                <Button x:Name="PFDone" Content="{DynamicResource bAdd}" HorizontalAlignment="Left" Margin="0,0,0,8" VerticalAlignment="Bottom" Width="125" Click="PFDone_Click"/>
                                <Button x:Name="PFDelete" Content="{DynamicResource bCancel}" HorizontalAlignment="Right" Margin="0,0,4,8" VerticalAlignment="Bottom" Width="125" Click="PFDelete_Click"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="{DynamicResource cProducts}" Padding="8, 2, 8, 2" Margin="290,10,10,153.2">
                            <Grid Margin="0,0,0,0">
                                <DataGrid x:Name="dgProducts" Margin="0,4,0,6" AutoGenerateColumns="False" EnableColumnVirtualization="True" IsReadOnly="True" CanUserReorderColumns="False" CanUserResizeColumns="False" SelectionMode="Single" CanUserResizeRows="False" SelectionChanged="DgProducts_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="{DynamicResource cNum}"  Binding="{Binding Id}"/>
                                        <DataGridTextColumn Header="{DynamicResource cProductTitle}" Binding="{Binding Title}"/>
                                        <DataGridTextColumn Header="{DynamicResource cPriceHT}" Binding="{Binding PriceHT}"/>
                                        <DataGridTextColumn Header="{DynamicResource cProductReference}" Binding="{Binding Reference}"/>
                                        <DataGridTextColumn Header="{DynamicResource cQuantityNotOrdered}" Binding="{Binding Quantity}"/>
                                        <DataGridTextColumn Header="{DynamicResource cQuantityInStock}" Binding="{Binding QuantityStock}"/>
                                        <DataGridTextColumn Header="{DynamicResource cDescription}" Binding="{Binding Description}"/>
                                        <DataGridTextColumn Header="{DynamicResource cCategory}" Binding="{Binding Category.Title }"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </GroupBox>
                        <Grid HorizontalAlignment="Left" Margin="10,326,0,10.4" Background="{DynamicResource MaterialDesignPaper}" Width="275" materialDesign:ShadowAssist.ShadowDepth="Depth4">
                            <Image Margin="0"/>
                        </Grid>
                        <ListBox Height="138" Margin="290,0,226,10.2" VerticalAlignment="Bottom" Background="{DynamicResource MaterialDesignPaper}" materialDesign:ShadowAssist.ShadowDepth="Depth4"/>
                        <GroupBox Header="{DynamicResource cActions}" Padding="8, 2, 8, 2" Margin="0,0,10,10.2" Height="135" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="211">
                            <Grid Margin="0,0,0,1.2">
                                <Button x:Name="bAddProduct" IsEnabled="False" Content="{DynamicResource bAddProduct}" Margin="0,4,0,0" VerticalAlignment="Top" Height="32" Click="bAddProduct_Click"/>
                                <Button x:Name="bAddImage" IsEnabled="False" Content="{DynamicResource bAddImage}" Margin="0,42,0.2,0" VerticalAlignment="Top" Height="32"/>
                                <Button x:Name="bDeleteImages" IsEnabled="False" Content="{DynamicResource bDeleteImages}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" Margin="0,77,0.2,0" VerticalAlignment="Top" Height="32"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tiClient" Header="{DynamicResource tClient}" Background="{DynamicResource MaterialDesignBackground}" BorderBrush="{x:Null}" Style="{DynamicResource TabItemStyle}">
                    <Grid Background="{DynamicResource MaterialDesignCardBackground}">
                        <GroupBox Header="{DynamicResource cClientInfos}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="275" Padding="8, 2, 8, 2" Margin="10,10,0,0" Height="257">
                            <Grid Margin="0,0,0,0" x:Name="ClientForm" Visibility="Collapsed">
                                <TextBox x:Name="CFClientLogin" materialDesign:HintAssist.Hint="{DynamicResource cClientLogin}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="0,4,0,0" Height="60" TextWrapping="Wrap" VerticalAlignment="Top" Width="129"/>
                                <TextBox x:Name="CFClientEmail" materialDesign:HintAssist.Hint="{DynamicResource cClientEmail}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="0,69,0,0" Height="88" TextWrapping="Wrap" VerticalAlignment="Top" Width="129"/>
                                <TextBox x:Name="CFClientName" materialDesign:HintAssist.Hint="{DynamicResource cClientLastName}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="134,69,0,0" Height="60" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
                                <TextBox x:Name="CFClientFirstName" materialDesign:HintAssist.Hint="{DynamicResource cClientFirstName}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="134,4,0,0" Height="60" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
                                <TextBox x:Name="CFClientPhoneNumber" materialDesign:HintAssist.Hint="{DynamicResource cClientPhoneNumber}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="134,134,0,0" Height="60" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
                                <Button IsEnabled="False" Content="{DynamicResource bResetPassword}" HorizontalAlignment="Left" Margin="0,162,0,0" VerticalAlignment="Top" Width="125" RenderTransformOrigin="0.215,2.439"/>
                                <Button x:Name="CFDone" Content="{DynamicResource bAdd}" HorizontalAlignment="Left" Margin="0,199,0,0" VerticalAlignment="Top" Width="125" Click="CFDone_Click"/>
                                <Button x:Name="CFDelete" Content="{DynamicResource bCancel}" HorizontalAlignment="Right" Margin="130,199,0,0" VerticalAlignment="Top" Width="125" Click="CFDelete_Click"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="{DynamicResource cClients}" Padding="8, 2, 8, 2" Margin="290,10,10,207.4">
                            <Grid Margin="0,0,0,0">
                                <DataGrid x:Name="dgClients" Margin="0,4,0,6" AutoGenerateColumns="False" EnableColumnVirtualization="True" IsReadOnly="True" CanUserReorderColumns="False" CanUserResizeColumns="False" SelectionMode="Single" CanUserResizeRows="False" SelectionChanged="DgClients_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="{DynamicResource cNum}" Binding="{Binding Id}"/>
                                        <DataGridTextColumn Header="{DynamicResource cClientLogin}" Binding="{Binding Login}"/>
                                        <DataGridTextColumn Header="{DynamicResource cClientLastName}" Binding="{Binding LastName}"/>
                                        <DataGridTextColumn Header="{DynamicResource cClientFirstName}" Binding="{Binding FirstName}"/>
                                        <DataGridTextColumn Header="{DynamicResource cClientEmail}" Binding="{Binding Email}"/>
                                        <DataGridTextColumn Header="{DynamicResource cClientPhoneNumber}" Binding="{Binding PhoneNumber}"/>
                                        <DataGridTemplateColumn  Header="{DynamicResource cClientAvatar}" MaxWidth="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding Avatar, Converter={StaticResource AvatarConverter}}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="{DynamicResource cClientCreationDate}" Binding="{Binding CreatedDate, StringFormat={}{0:dd/MM/yyyy HH:mm:ss} }"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="{DynamicResource cAddressInfos}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="275" Padding="8, 2, 8, 2" Margin="10,0,0,4.4" Height="195">
                            <Grid Margin="0,0,0,0" x:Name="AddressForm" Visibility="Collapsed">
                                <TextBox x:Name="AFWay" materialDesign:HintAssist.Hint="{DynamicResource cAddressWay}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="0,4,0,0" Height="60" TextWrapping="Wrap" VerticalAlignment="Top" Width="129"/>
                                <TextBox x:Name="AFComplement" materialDesign:HintAssist.Hint="{DynamicResource cAddressComplement}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="134,4,0,0" Height="60" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
                                <TextBox x:Name="AFCity" materialDesign:HintAssist.Hint="{DynamicResource cAddressCity}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="134,69,0,0" Height="60" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
                                <TextBox x:Name="AFZipCode" materialDesign:HintAssist.Hint="{DynamicResource cAddressZipCode}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" HorizontalAlignment="Left" Margin="0,69,0,0" Height="60" TextWrapping="Wrap" VerticalAlignment="Top" Width="129"/>
                                <Button x:Name="AFDone" Content="{DynamicResource bAdd}" HorizontalAlignment="Left" Margin="0,134,0,0" VerticalAlignment="Top" Width="125" Click="AFDone_Click"/>
                                <Button x:Name="AFDelete" Content="{DynamicResource bCancel}" HorizontalAlignment="Right" Margin="0,134,0.2,0" VerticalAlignment="Top" Width="125" Click="AFDelete_Click"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="{DynamicResource cClientAddress}" Padding="8,2,8,2" Margin="290,0,189,4.4" VerticalAlignment="Bottom" Height="198">
                            <Grid Margin="0,0,0,0">
                                <DataGrid x:Name="dgAddresses" Margin="0,4,0,6" AutoGenerateColumns="False" EnableColumnVirtualization="True" IsReadOnly="True" CanUserReorderColumns="False" CanUserResizeColumns="False" SelectionMode="Single" CanUserResizeRows="False" SelectionChanged="DgAddresses_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="{DynamicResource cAddressWay}"  Binding="{Binding Way}"/>
                                        <DataGridTextColumn Header="{DynamicResource cAddressComplement}" Binding="{Binding Complement}"/>
                                        <DataGridTextColumn Header="{DynamicResource cAddressZipCode}" Binding="{Binding ZipCode}"/>
                                        <DataGridTextColumn Header="{DynamicResource cAddressCity}" Binding="{Binding City}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="{DynamicResource cActions}" Padding="8,2,8,2" Margin="0,0,10,4.4" Height="198" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="174">
                            <Grid Margin="0,0,0,1.2">
                                <Button x:Name="bAddClient" IsEnabled="False" Content="{DynamicResource bAddClient}" Margin="0,4,0,0" VerticalAlignment="Top" Height="32" Click="BAddClient_Click"/>
                                <Button x:Name="bAddAddress" IsEnabled="False" Content="{DynamicResource bAddAddress}" Margin="0,42,0.2,0" VerticalAlignment="Top" Height="32" Click="BAddAddress_Click"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tiOrder" Header="{DynamicResource tOrder}" Background="{DynamicResource MaterialDesignBackground}" BorderBrush="{x:Null}" Style="{DynamicResource TabItemStyle}">
                    <Grid Background="{DynamicResource MaterialDesignCardBackground}">
                        <GroupBox Header="{DynamicResource cOrders}" Padding="8, 2, 8, 2" Margin="10,10,10,210.4">
                            <Grid Margin="0,0,0,0">
                                <DataGrid x:Name="dgOrder" Margin="0,4,0,6" AutoGenerateColumns="False" EnableColumnVirtualization="True" IsReadOnly="True" CanUserReorderColumns="False" CanUserResizeColumns="False" SelectionMode="Single" CanUserResizeRows="False" SelectionChanged="DgOrder_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="{DynamicResource cNum}" Binding="{Binding Id}"/>
                                        <DataGridTextColumn Header="{DynamicResource cOrdersClientName}" Binding="{Binding ClientName}"/>
                                        <DataGridTextColumn Header="{DynamicResource cOrdersClientNum}" Binding="{Binding ClientId}"/>
                                        <DataGridTextColumn Header="{DynamicResource cOrdersShipping}" Binding="{Binding Shipping}"/>
                                        <DataGridTextColumn Header="{DynamicResource cOrdersPriceHT}" Binding="{Binding PriceHT}"/>
                                        <DataGridTextColumn Header="{DynamicResource cOrdersPriceTTC}" Binding="{Binding PriceTTC}"/>
                                        <DataGridTextColumn Header="{DynamicResource cOrdersShippingAddress}" Binding="{Binding ShippingAddress}"/>
                                        <DataGridTextColumn Header="{DynamicResource cOrdersDate}" Binding="{Binding OrderedDate, StringFormat={}{0:dd/MM/yyyy HH:mm:ss} }"/>
                                        <DataGridTextColumn Header="{DynamicResource cOrdersShipped}" Binding="{Binding Shipped, Converter={StaticResource ShippedConverter}}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="{DynamicResource cOrderProducts}" Padding="8, 2, 8, 2" Margin="10,0,290,5.4" VerticalAlignment="Bottom" Height="200">
                            <Grid Margin="0,0,0,0">
                                <DataGrid x:Name="dgOrderContent" Margin="0,4,0,6" AutoGenerateColumns="False" EnableColumnVirtualization="True" IsReadOnly="True" CanUserReorderColumns="False" CanUserResizeColumns="False" SelectionMode="Single" CanUserResizeRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="{DynamicResource cNumProducts}" Binding="{Binding ProductId}"/>
                                        <DataGridTextColumn Header="{DynamicResource cProductReference}" Binding="{Binding ProductReference}"/>
                                        <DataGridTextColumn Header="{DynamicResource cProductTitle}" Binding="{Binding ProductName}"/>
                                        <DataGridTextColumn Header="{DynamicResource cPriceHT}" Binding="{Binding PriceHT}"/>
                                        <DataGridTextColumn Header="{DynamicResource cQuantityOrdered}" Binding="{Binding Qantity}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="{DynamicResource cChangeDeliveryAddress}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="275" Padding="8,2,8,2" Margin="0,0,10,70.4" Height="135">
                            <Grid Margin="0,0,0,0" x:Name="ChangeOrderAddressForm" Visibility="Collapsed">
                                <ComboBox x:Name="DAFAddress" materialDesign:HintAssist.Hint="{DynamicResource cAddresses}" Style="{StaticResource MaterialDesignComboBox}" HorizontalAlignment="Left" Margin="9,6,0,0" Height="60" VerticalAlignment="Top" Width="239"/>
                                <Button x:Name="DAFDone" Content="{DynamicResource bDone}" HorizontalAlignment="Left" Margin="0,71,0,0" VerticalAlignment="Top" Width="125" Click="DAFDone_Click"/>
                                <Button x:Name="DAFCancel" Content="{DynamicResource bCancel}" HorizontalAlignment="Right" Margin="0,71,0.2,0" VerticalAlignment="Top" Width="125" Click="DAFCancel_Click"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="{DynamicResource cActions}" Padding="8,2,8,2" Margin="0,0,10,5.4" Height="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="275">
                            <Grid Margin="0,0,0,1.2">
                                <Button x:Name="bShipTheOrder" IsEnabled="False" Content="{DynamicResource bShipTheOrder}" Margin="0,4,0,0" VerticalAlignment="Top" Height="32" Click="BShipTheOrder_Click"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
            </TabControl>
            <StackPanel 
                Margin="0,22,3.6,0" 
                VerticalAlignment="Top" 
                Panel.ZIndex="1" 
                Background="Transparent" 
                HorizontalAlignment="Right" 
                ScrollViewer.VerticalScrollBarVisibility="Auto" 
                Visibility="Hidden"
                x:Name="popMenu">
                <Border x:Name="SubMenuBorder"
                        Background="{DynamicResource MaterialDesignPaper}"
                        Effect="{DynamicResource MaterialDesignShadowDepth1}"
                        CornerRadius="2">
                    <Border Background="Transparent">
                        <StackPanel>
                            <Button 
                                Content="{DynamicResource cNone}"
                                VerticalAlignment="Top"
                                Style="{DynamicResource MaterialDesignFlatButton}" 
                                Foreground="{DynamicResource MaterialDesignBody}"
                                FontFamily="/stoko;component/Resources/#Roboto"
                                Focusable="False"/>
                            <Button 
                                Content="{DynamicResource setting}"
                                VerticalAlignment="Top"
                                Style="{DynamicResource MaterialDesignFlatButton}" 
                                Foreground="{DynamicResource MaterialDesignBody}"
                                FontFamily="/stoko;component/Resources/#Roboto"
                                Focusable="False"
                                Click="Button_Settings_Click"/>
                        </StackPanel>
                    </Border>
                </Border>
            </StackPanel>
        </Grid>
        <StatusBar Height="20" Margin="0,0,-0.4,0" VerticalAlignment="Bottom" Background="{DynamicResource MaterialDesignPaper}">
            <Label Content="{DynamicResource sStatus}" Width="auto" Padding="0,0,0,0" FontSize="10" Foreground="{DynamicResource MaterialDesignBody}"/>
            <Label x:Name="msgStatut" Content="{DynamicResource sLoading}" Width="auto" Padding="0,0,0,0" FontSize="10" Foreground="{DynamicResource MaterialDesignBody}"/>
        </StatusBar>

        <!-- Settings panel -->
        <Grid x:Name="SettingPanel" Background="{DynamicResource MaterialDesignPaper}" Visibility="Hidden" Margin="0,0,0,20">
            <Button x:Name="bSettingsClose" Style="{DynamicResource MaterialDesignFlatToggleButton}" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="18" Height="18" Margin="0,30,45,0" Panel.ZIndex="1" Padding="1" BorderBrush="{x:Null}" Foreground="{StaticResource MaterialDesignBody}" ToolTip="{DynamicResource sSettingClose}" Cursor="Hand" Focusable="True" Click="Button_SettingsClose_Click"/>
            <TabControl TabStripPlacement="Left" Margin="75,40" Background="{DynamicResource MaterialDesignPaper}" BorderBrush="{DynamicResource MaterialDesignPaper}">
                <TabItem Header="{DynamicResource sGeneral}" Background="{DynamicResource MaterialDesignBackground}" Style="{DynamicResource TabItemStyleLeft}">
                    <Grid>
                        <Border Margin="1,-2,1,1" Padding="8" BorderThickness="1" CornerRadius="16"  BorderBrush="{DynamicResource MaterialDesignBackground}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Grid VerticalAlignment="Center" Margin="40,16,40,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="{DynamicResource sLang}" Grid.Column="0" Foreground="{DynamicResource MaterialDesignBody}"/>
                                    <ComboBox Grid.Column="1" BorderBrush="{x:Null}" Background="{DynamicResource MaterialDesignBackground}" Foreground="{DynamicResource MaterialDesignBody}" x:Name="cbLang" SelectionChanged="ComboBoxLang_SelectionChanged"/>
                                </Grid>
                                <Separator/>
                                <CheckBox x:Name="allowDarkMode" Content="{DynamicResource sDarkMode}" Margin="40,16,40,16" VerticalAlignment="top" HorizontalContentAlignment="Right" FlowDirection="RightToLeft" BorderBrush="{x:Null}" Foreground="{DynamicResource MaterialDesignBody}" Background="{DynamicResource MaterialDesignBody}" Checked="CheckBoxDarkTheme_Checked" Unchecked="CheckBoxLightTheme_Checked"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem Header="{DynamicResource sAdvanced}" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource TabItemStyleLeft}">
                    <Grid>
                        <Border Margin="1,-2,1,1" Padding="8" BorderThickness="1" CornerRadius="16"  BorderBrush="{DynamicResource MaterialDesignBackground}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <CheckBox x:Name="allowMenu" Content="{DynamicResource sAllowMenu}" Margin="40,16,40,16" VerticalAlignment="Top" HorizontalContentAlignment="Right" FlowDirection="RightToLeft" BorderBrush="{x:Null}" Foreground="{DynamicResource MaterialDesignBody}" Background="{DynamicResource MaterialDesignBody}" Checked="CheckBoxAllowMenu_Checked" Unchecked="CheckBoxUnAllowMenu_Checked"/>
                                <Separator/>
                                <Grid VerticalAlignment="Center" Margin="40,16,40,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBox x:Name="DFhost" Grid.Column="0" Grid.Row="0" materialDesign:HintAssist.Hint="{DynamicResource sDbHost}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" MaxHeight="80" Margin="8" TextWrapping="Wrap" Width="auto"/>
                                    <TextBox x:Name="DFname" Grid.Column="1" Grid.Row="0" materialDesign:HintAssist.Hint="{DynamicResource sDbName}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" MaxHeight="80" Margin="8" TextWrapping="Wrap" Width="auto"/>
                                    <TextBox x:Name="DFuser" Grid.Column="0" Grid.Row="1" materialDesign:HintAssist.Hint="{DynamicResource sDbUser}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" MaxHeight="80" Margin="8" TextWrapping="Wrap" Width="auto"/>
                                    <TextBox x:Name="DFpass" Grid.Column="1" Grid.Row="1" materialDesign:HintAssist.Hint="{DynamicResource sDbPassword}" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" MaxHeight="80" Margin="8" TextWrapping="Wrap" Width="auto"/>
                                    <Button Grid.Column="1" Grid.Row="2" Content="{DynamicResource bDbConnect}" Margin="8" Click="bDbConnect_Click"/>
                                </Grid>
                                <Separator/>
                                <Grid VerticalAlignment="Center" Margin="40,16,40,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="imgSrvUrl" materialDesign:HintAssist.Hint="{DynamicResource sImgServerUrl}" Grid.Column="0" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" Height="60" Margin="8" TextWrapping="Wrap" Width="auto"/>
                                    <Button Grid.Column="1" Content="{DynamicResource bDone}" Margin="8" Click="Button_Click"/>
                                </Grid>
                                <!--<TextBox materialDesign:HintAssist.Hint="test 3" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>-->
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
